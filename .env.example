# Copy to .env and set values. For production, set SECRET_KEY and use strong passwords.

# Host port for backend API (default 8001; use 8000 if free)
# BACKEND_PORT=8001

# Database (used by backend and docker-compose). In Docker, host must be "db" (service name).
POSTGRES_USER=famtree_user
POSTGRES_PASSWORD=changeme
POSTGRES_DB=famtree_db
DATABASE_URL=postgresql://famtree_user:changeme@db:5432/famtree_db

# Backend auth - required in production
SECRET_KEY=generate-a-long-random-secret-key

# CORS - comma-separated origins, or * for development
ALLOWED_ORIGINS=*
